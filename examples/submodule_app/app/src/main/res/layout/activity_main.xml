<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="8dp"
            android:background="@android:color/transparent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button android:id="@+id/btn_center" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Center"/>
            <Button android:id="@+id/btn_marker" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Marker"/>
            <Button android:id="@+id/btn_route" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Route"/>
            <Button android:id="@+id/btn_download" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Download"/>
        </LinearLayout>

        <ProgressBar android:id="@+id/download_progress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:max="100" android:progress="0"/>
        <TextView android:id="@+id/tv_download_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="12sp" />
        <ProgressBar android:id="@+id/routing_progress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:max="100" android:progress="0"/>
        <TextView android:id="@+id/tv_routing_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>
